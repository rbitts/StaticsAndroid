<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/user_view_summary_compare_title"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/user_view_summary_single_chart_title_size"
        android:textColor="@color/span_primary"
        android:textStyle="bold"
        android:text="KDA"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <TextView
            android:id="@+id/user_view_summary_chart_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/user_view_summary_single_chart_descript_size"
            android:textColor="@color/span_secondary"
            android:textStyle="bold"
            android:text="KDA"
            />

        <com.sec.widget.Chart.view.HorizontalStackBarChartView
            android:id="@+id/user_view_summary_compare_chart"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/user_view_summary_compare_chart_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/user_view_summary_single_chart_descript_size"
            android:textColor="@color/span_secondary"
            android:textStyle="bold"
            android:text="KDA"
            />
    </LinearLayout>

</LinearLayout>

