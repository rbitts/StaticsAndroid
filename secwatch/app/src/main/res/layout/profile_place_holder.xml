<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View android:id="@+id/profile_place_holder_portrait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <android.support.percent.PercentFrameLayout
        android:id="@+id/profile_place_holder_user_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="100%"
        android:orientation="horizontal"
        android:paddingTop="@dimen/profile_place_holder_margin"
        android:paddingLeft="@dimen/profile_place_holder_margin"
        android:paddingRight="@dimen/profile_place_holder_margin"
        android:visibility="gone"
        >

        <android.support.percent.PercentFrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="30%"
            android:orientation="vertical"
            >

            <LinearLayout
                app:layout_marginTopPercent="10%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/profile_place_holder_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/user_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal"
                    android:background="@color/label_info"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fa_icon_clock"
                        android:textSize="@dimen/profile_place_holder_timestamp_text"
                        android:textColor="@color/label"
                        />

                    <TextView
                        android:id="@+id/profile_place_holder_time_stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/label"
                        android:textSize="@dimen/profile_place_holder_timestamp_text"
                        android:text="분 전"
                        />

                </LinearLayout>

            </LinearLayout>

        </android.support.percent.PercentFrameLayout>


        <android.support.percent.PercentFrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="75%"
            app:layout_marginTopPercent="10%"
            app:layout_marginLeftPercent="30%"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_place_holder_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/span_primary"
                    android:textSize="@dimen/profile_place_holder_id_text_size"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="승리한 게임 "
                        android:textColor="@color/span_secondary"
                        android:textSize="@dimen/profile_place_holder_won_games_text_size"
                        />
                    <TextView
                        android:id="@+id/profile_place_holder_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/span_secondary"
                        android:textSize="@dimen/profile_place_holder_won_games_text_size"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회"
                        android:textColor="@color/span_secondary"
                        android:textSize="@dimen/profile_place_holder_won_games_text_size"
                        />
                </LinearLayout>

            </LinearLayout>

\
            <android.support.percent.PercentFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="40%"
                app:layout_marginLeftPercent="5%"
                app:layout_widthPercent="65%"
                >

                <android.support.percent.PercentFrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_widthPercent="60%"
                    android:layout_marginTop="-15dp"
                    >

                    <ImageView
                        android:id="@+id/profile_place_holder_level_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_widthPercent="100%"
                        android:adjustViewBounds="true"
                        />

                    <TextView android:id="@+id/profile_place_holder_level_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/span_primary"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/profile_place_holder_level_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_heightPercent="50%"
                        android:adjustViewBounds="true"
                        android:src="@drawable/user_icon"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="bottom"
                        />

                </android.support.percent.PercentFrameLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_marginLeftPercent="60%"
                    app:layout_widthPercent="30%"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/profile_place_holder_rank_picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/user_icon"
                        />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/label_inverse"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <TextView android:id="@+id/profile_place_holder_rank_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/label"
                            android:textStyle="bold"
                            android:textSize="@dimen/profile_place_holder_rank_text"
                            android:maxLines="1"
                            />

                    </FrameLayout>


                </LinearLayout>

            </android.support.percent.PercentFrameLayout>





        </android.support.percent.PercentFrameLayout>

    </android.support.percent.PercentFrameLayout>


    <android.support.percent.PercentFrameLayout
        android:id="@+id/profile_default_place_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="100%"
        android:orientation="horizontal"
        android:paddingTop="@dimen/profile_place_holder_margin"
        android:paddingLeft="@dimen/profile_place_holder_margin"
        android:paddingRight="@dimen/profile_place_holder_margin"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/user_icon"
            app:layout_heightPercent="50%"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="78%"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/span_primary"
            android:text="@string/profile_activity_contents_default_text"
            />

    </android.support.percent.PercentFrameLayout>


</android.support.percent.PercentFrameLayout>